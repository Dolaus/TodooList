@model TodooList.Models.ViewModels.RegisterModel
 
<h2>Реєстрація</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
         <div>
            <label asp-for="Name">Введіть Ім'я</label><br />
            <input class="form-control" type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>

        <div>
            <label asp-for="Email">Введіть
                Email</label><br />
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторіть пароль</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <br />
        <div>
            <input class="btn btn-primary" type="submit" value="Зареєструватися" />
        </div>
    </div>
</form>