@model TodooList.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування даних</h1>

<h4>Користувач</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label">Рік народження</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

              <div class="form-group row">
                    <div class="col-4">
                        Фото
                    </div>
                    <div class="col-8">
                        <input type="file" name="fileimages" id="uploadBox" multiple class="form-control"/>
                    </div>
             </div>


            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

