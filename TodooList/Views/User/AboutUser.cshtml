@model User
@{
    ViewData["Title"] = "Details";
}

<h1>Особисті дані</h1>

<div> 
    </hr>
      <div class="col-4">
                      <img src="@URL.ImageUserURL@Model.Image" width=" 100%" style="border-radius:5px; border:1px solid #bbb" />
                 </div>
    <dl class="row">
        <dt class="col-sm-2">
             Ім'я
        </dt>
        <dd class="col-sm-10">
             @Html.DisplayFor(modelItem => modelItem.Name)
        </dd>
        <dt class="col-sm-2">
            Рік народження
        </dt>
        <dd class="col-sm-10">
             @Html.DisplayFor(modelItem => modelItem.Year)
        </dd>


         <h4>
             Мої справи
        </h4>
        <div class="col-6 text-right">
            <a asp-controller="Todo" asp-action="Create" asp-route-id="@Model.Id" class=" btn btn-primary">
                 Добавити справу
            </a> 
        </div>
        <dd class="col-sm-10">

        </dd>
        <div>
            <td>
                <a asp-action="Edit" asp-route-email="@Model.Email">Редагувати дані</a> <br />
             
            </td>
        </div>
        <br />
        <br />
        <br />
        <br />
        <h2>Справи</h2>
        <div class="container">
            <div class="row gy-5">
                <div class="col-3">
                    <h5> Опис</h5>
                </div>
                <div class="col-3">
                    <h5> Статус</h5>
                </div>
                <div class="col-6 text-end">
                </div>
            </div>
        </div>
         @if (Model.TodoList.Count > 0)
        {
            @foreach (var item in Model.TodoList)
            {
                <div class="container">
                    <div class="row gy-5">
                         <div class="col-3">
                              @Html.DisplayFor(modelItem => item.Description)
                        </div>
                         <div class="col-3">
                                 <input class="form-check-input" asp-for="@item.IsComplete" disabled /> Виконано
                         </div>
                        <div class="col-6 text-end">
                              <a class="btn btn-primary" asp-controller="ToDo" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                        
                              <a class="btn btn-primary" asp-controller="ToDo" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                         </div>
                    </div>
                </div>
                <br />
                <hr />
            }
        }
    </dl>
</div>

